@model LCBusService.Models.BusStop

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>BusStop</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="BusStopNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="text" asp-for="BusStopNumber" readonly />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GoingDowntown" class="col-md-2 control-label"></label>
            <div class=" col-md-10">
                <div class="checkbox">
                    <input asp-for="GoingDowntown" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Location" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LocationHash" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LocationHash" class="form-control" readonly/>
                <span asp-validation-for="LocationHash" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
